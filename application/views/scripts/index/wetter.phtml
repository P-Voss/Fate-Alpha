<?php
$currentDate = new DateTime();
/* @var $day Application_Model_Tageswetter */
$days = $this->forecast;
$sizeCurrentDate = '55px';
$sizeAnyDate = '50px';
?>
<h1>Wetterbericht</h1>
<div style=" text-align: center">
<?php foreach($days as $day): 
