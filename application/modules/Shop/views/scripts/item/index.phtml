    Shop_Model_Itemtypes::ITEMTYPE_WEAPON_RANGED => [],
    Shop_Model_Itemtypes::ITEMTYPE_WEAPON_CONCEPT => [],
    Shop_Model_Itemtypes::ITEMTYPE_WEAPON_MYSTIC => [],
    Shop_Model_Itemtypes::ITEMTYPE_WEAPON_RECIPE => [],
